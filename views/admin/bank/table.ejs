<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Nama pemilik</th>
            <th>Nama bank</th>
            <th>Nomor rekening</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < bank.length; i++) { %>
        <tr>
            <td><%- i + 1 %></td>
            <td><%- bank[i].name.toUpperCase() %></td>
            <td><%- bank[i].nameBank %></td>
            <td><%- bank[i].noRekening %></td>
            <td>
                <form action="/bank/delete/<%= bank[i]._id %>?_method=DELETE" method="POST">
                    <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-primary">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    <button class="btn btn-danger ">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>

<script>
    String.prototype.capitalize = function() {
        return this.charAt(0).toLocaleUpperCase + this.split(1)
    }
</script>