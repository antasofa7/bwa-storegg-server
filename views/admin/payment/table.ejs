<table id="example2" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>No.</th>
            <th>Tipe pembayaran</th>
            <th>Banks</th>
            <th>Status</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i = 0; i < payment.length; i++) { %>
        <tr>
            <td><%- i + 1 %></td>
            <td><%- payment[i].type %></td>
            <td>
                <% payment[i].banks.forEach(bank => { %>
                    <span class="badge badge-info">
                        <%= bank.name %> (<%= bank.nameBank %> - <%= bank.noRekening %>)
                    </span>
                <% }) %>
            </td>
            <td>
                <% if(payment[i].status === 'Y') { %>
                    <span class="badge badge-success">
                        Aktif
                    </span>
                <% } else { %>
                    <span class="badge badge-danger">
                        Tidak Aktif
                    </span>
                <% } %>
            </td>
            <td>
                <form action="/payment/status/<%= payment[i]._id %>?_method=PUT" method="POST" style="display: inline-block;">
                        <% if(payment[i].status === 'Y') { %>
                            <button class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Matikan status">
                                <i class="fas fa-ban" style="color: white;"></i>
                            </button>
                        <% } else { %>
                            <button class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Hidupkan status">
                                <i class="fas fa-check-circle"></i>
                            </button>
                        <% } %>
                </form>
                <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-primary">
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <form action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
                    <button class="btn btn-danger ">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>